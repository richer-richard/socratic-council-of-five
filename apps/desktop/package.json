{
  "name": "@socratic-council/desktop",
  "version": "0.1.0",
  "description": "Desktop application for Socratic Council - Tauri 2.0 + React",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "pnpm -C ../../packages/shared build && pnpm -C ../../packages/sdk build && pnpm -C ../../packages/core build && tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run --config ../../vitest.config.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@socratic-council/core": "workspace:*",
    "@socratic-council/sdk": "workspace:*",
    "@socratic-council/shared": "workspace:*",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-store": "^2.4.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.0"
  }
}
