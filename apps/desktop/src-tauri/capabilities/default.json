{
  "$schema": "https://schema.tauri.app/capabilities/2",
  "identifier": "default",
  "description": "Default capabilities for Socratic Council",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "core:default",
    "store:default",
    "http:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    }
  ]
}
